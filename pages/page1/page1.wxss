
page {
  font-family: 'UranusPixel', monospace;
}
.page1 {
  width: 100vw;
  height: 100vh;
  overflow: hidden;
  position: relative;
  padding-top: env(safe-area-inset-top);
  box-sizing: border-box;
}

.page1-bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background-image: url('https://ycybook.oss-cn-shanghai.aliyuncs.com/public/images/universe.png');
  background-size: cover;
  background-position: center;
  animation: moveBackground 3s linear infinite;
  z-index: -1;
}

@keyframes moveBackground {
  from { background-position: 0 0; }
  to { background-position: 100px 100px; }
}

.grid-layout {
  display: grid;
  grid-template-rows: repeat(8, 1fr);
  width: 100%;
  height: 100%;
  position: relative;
  z-index: 2;
}

.title-box {
  grid-row: 2 / span 2;
  grid-column: 1 / -1;
  justify-self: center;
  align-self: center;
  width: 80vw;
  max-width: 500px;
  max-height: 30vh;
  padding: 4vh 4vw;
  background-image: url('https://ycybook.oss-cn-shanghai.aliyuncs.com/public/images/backgroundframe.png');
  background-size: cover;
  background-position: center;
  border-radius: 16px;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.4);
  text-align: center;
  color: #393629;
}

.title-box .title {
  font-size: 32px;
  text-shadow: 1px 1px 0 white;
}

.title-box .subtitle {
  margin-top: 1vh;
  font-size: 24px;
  text-shadow: 1px 1px 0 white;
}

.spaceship {
  width: 35vw;         
  max-width: 200px;   
  transform: translateY(-20%);
  z-index: 1;
  grid-row: 6 / span 2;
  grid-column: 1 / -1;
  justify-self: center;
  align-self: start;
}


.star {
  position: absolute;
  z-index: 1;
  animation: rotateStar 3s linear infinite;
}

@keyframes rotateStar {
  from { transform: rotate(0deg); }
  to { transform: rotate(30deg); }
}

.star1 {
  bottom: 10%;
  right: 5%;
  width: 106rpx;
  height: 106rpx;
}

.star2 {
  top: 8%;
  left: 15%;
  width: 88rpx;
  height: 88rpx;
}

.star3 {
  top: 40%;
  right: 3%;
  width: 96rpx;
  height: 96rpx;
}

.star4 {
  top: 60%;
  left: 3%;
  width: 80rpx;
  height: 80rpx;
}

.mode-buttons {
  position: fixed;
  bottom: 6vh;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  justify-content: center;
  flex-direction: row;
  gap: 20rpx;
  z-index: 10;
  box-sizing: border-box;
  width: 100%;
  padding: 0 5vw;
}

.mode-button {
  position: relative;
  flex: 0 0 auto;
  padding: 10rpx 24rpx;
  font-size: 16px;
  color: #393629;
  background-color: #fdf3a1;
  border: 2rpx solid #aaa;
  border-radius: 12rpx;
  text-align: center;
  white-space: nowrap;
  box-shadow:
    0 4rpx 0 #aaa,
    0 8rpx 0 #888,
    0 12rpx 0 #666;
  min-width: 120rpx;
  max-width: 300rpx;
  box-sizing: border-box;
}
@keyframes pulseGlow {
  0%, 100% {
    filter: brightness(1);
    box-shadow:
      0 4rpx 0 #aaa,
      0 8rpx 0 #888,
      0 12rpx 0 #666;
  }
  50% {
    filter: brightness(1.2);
    box-shadow:
      0 4rpx 2rpx #fff,
      0 8rpx 6rpx #fdf3a1;
  }
}

.glow {
  animation: pulseGlow 1.8s ease-in-out infinite;
}


